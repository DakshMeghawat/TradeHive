# TradeHive Environment Configuration

# Alpha Vantage API Key
# Get a free key at: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# System Configuration
# Uncomment to override default values
RISK_TOLERANCE=0.5
USE_MOCK_DATA=false
UPDATE_INTERVAL=60
REPORT_INTERVAL=600
MONITORED_SYMBOLS=AAPL,MSFT

# Paper Trading Configuration
# Set to "true" to enable paper trading
PAPER_TRADING_ENABLED=true

# Paper Trading Platform (options: alpaca, interactive_brokers)
PAPER_TRADING_API=alpaca

# Alpaca Paper Trading Credentials
# Get your keys at: https://app.alpaca.markets/paper/dashboard/overview
PAPER_TRADING_API_KEY=your_alpaca_api_key_here
PAPER_TRADING_API_SECRET=your_alpaca_api_secret_here
PAPER_TRADING_ENDPOINT=https://paper-api.alpaca.markets

# Interactive Brokers Paper Trading (if using IB instead of Alpaca)
# IB_ACCOUNT=your_ib_account_number
# IB_PORT=7497

# MCP LLM Configuration
MCP_ENABLED=false
MCP_API_KEY=your_mcp_api_key_here
MCP_API_ENDPOINT=https://api.your-mcp-provider.com/v1
MCP_MODEL=mcp-agent-v1 